@model GuildCars.UI.Models.VehicleDisplayVM
@{
    ViewBag.Title = "New";
}

<h2>New Vehicles</h2>

<div class="container" id="quickSearchNewBox">
    <div class="row">
        <div class="form col-md-12">
            <h4><strong>Quick Search</strong></h4>
            <div class="row">
                <div class="form-group col-md-4">
                    <div class="well">
                        <input type="text"
                               class="form-control"
                               id="searchTermNew"
                               placeholder="Enter make, model, or year" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="col-md-2" for="priceMinNew">Price:</label>
                    <div class="well col-md-5">
                        <select class="form-control" id="priceMinNew">
                            <option value="0.00" selected>No Min</option>
                            <option value="9000.00">$9000</option>
                            <option value="10000.00">$10000</option>
                            <option value="11000.00">$11000</option>
                            <option value="12000.00">$12000</option>
                            <option value="15000.00">$15000</option>
                            <option value="20000.00">$20000</option>
                        </select>
                    </div>
                    <div class="well col-md-5">
                        <select class="form-control" id="priceMaxNew">
                            <option value="100000.00" selected>No Max</option>
                            <option value="9000.00">$9000</option>
                            <option value="10000.00">$10000</option>
                            <option value="11000.00">$11000</option>
                            <option value="12000.00">$12000</option>
                            <option value="15000.00">$15000</option>
                            <option value="20000.00">$20000</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="col-md-2" for="yearMinNew">Year:</label>
                    <div class="well col-md-5">
                        <select class="form-control" id="yearMinNew">
                            <option value="2000" selected>No Min</option>
                            <option value="2000">2000</option>
                            <option value="2001">2001</option>
                            <option value="2002">2002</option>
                            <option value="2003">2003</option>
                            <option value="2004">2004</option>
                            <option value="2005">2005</option>
                            <option value="2006">2006</option>
                            <option value="2007">2007</option>
                            <option value="2008">2008</option>
                            <option value="2009">2009</option>
                            <option value="2010">2010</option>
                            <option value="2011">2011</option>
                            <option value="2012">2012</option>
                            <option value="2013">2013</option>
                            <option value="2014">2014</option>
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                        </select>
                    </div>
                    <div class="well col-md-5">
                        <select class="form-control" id="yearMaxNew">
                            <option value="2021" selected>No Max</option>
                            <option value="2000">2000</option>
                            <option value="2001">2001</option>
                            <option value="2002">2002</option>
                            <option value="2003">2003</option>
                            <option value="2004">2004</option>
                            <option value="2005">2005</option>
                            <option value="2006">2006</option>
                            <option value="2007">2007</option>
                            <option value="2008">2008</option>
                            <option value="2009">2009</option>
                            <option value="2010">2010</option>
                            <option value="2011">2011</option>
                            <option value="2012">2012</option>
                            <option value="2013">2013</option>
                            <option value="2014">2014</option>
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-4 col-md-4">
                    <div class="well">
                        <button type="button"
                                id="searchButtonNew"
                                class="btn-block">
                            Search
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<hr />

<ul class="list-group" id="errorMessages"></ul>
<div class="container" id="searchResultsDisplayNew">

</div>

@section scripts {
    <script src="~/JS/home.js"></script>
}