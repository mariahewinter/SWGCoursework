@model GuildCars.UI.Models.SaleVM

@{
    ViewBag.Title = "Purchase";
}

<h2>Purchase</h2>

<div class="container" id="salesPurchaseDisplay">

    <div class="row">
        <div class="col-md-3">
            <div class="well">
                @Model.Details.Vehicle.Year @Model.Details.Makes.FirstOrDefault(m => m.MakeID == Model.Details.Vehicle.MakeID).MakeName @Model.Details.Models.FirstOrDefault(m => m.ModelID == Model.Details.Vehicle.ModelID).ModelName
                <img src="/Images/@Model.Details.Vehicle.Picture" />
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-4">
                    <div class="well"><strong>Body Style: </strong>@Model.Details.BodyStyles.FirstOrDefault(m => m.BodyStyleID == Model.Details.Vehicle.BodyStyleID).BodyStyleName</div>
                </div>
                <div class="col-md-4">
                    <div class="well"><strong>Interior: </strong>@Model.Details.Colors.FirstOrDefault(m => m.ColorID == Model.Details.Vehicle.InteriorColor).ColorName</div>
                </div>
                <div class="col-md-4">
                    <div class="well"><strong>Sale Price: </strong>$@Model.Details.Vehicle.SalePrice</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="well"><strong>Trans: </strong>@Model.Details.Transmission.FirstOrDefault(m => m.TransmissionID == Model.Details.Vehicle.TransmissionID).TransmissionName</div>
                </div>
                <div class="col-md-4">
                    <div class="well"><strong>Mileage: </strong>@Model.Details.Vehicle.Mileage</div>
                </div>
                <div class="col-md-4">
                    <div class="well"><strong>MSRP: </strong>$@Model.Details.Vehicle.MSRP</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="well"><strong>Color: </strong>@Model.Details.Colors.FirstOrDefault(m => m.ColorID == Model.Details.Vehicle.ExteriorColor).ColorName</div>
                </div>
                <div class="col-md-4">
                    <div class="well"><strong>Vin #: </strong>@Model.Details.Vehicle.VinNumber</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="well">
                        <strong>Description: </strong>@Model.Details.Vehicle.Description
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<h2>Sales Information</h2>

<div class="container">
    <div class="row col-md-12">
        @using (Html.BeginForm("Purchase", "Sales", FormMethod.Post, new { @class = "well col-md-6", role = "form" }))
        {
            <div class="form-group col-md-12">
                @Html.HiddenFor(c => c.Sale.VinNumber)
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.Name, new { @class = "col-md-2" })
                @Html.TextBoxFor(c => c.Sale.Name, new { @class = "form-control col-md-10", required = "required" })
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.Name)</div>

            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.Email, new { @class = "col-md-2" })
                @Html.TextBoxFor(c => c.Sale.Email, new { @class = "form-control col-md-10" })
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.Email)</div>

            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.Phone, new { @class = "col-md-2" })
                @Html.TextBoxFor(c => c.Sale.Phone, new { @class = "form-control col-md-10" })
            </div>

            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.Address1, new { @class = "col-md-2" })
                @Html.TextBoxFor(c => c.Sale.Address1, new { @class = "form-control", required = "required" })
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.Address1)</div>

            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.Address2, new { @class = "col-md-2" })
                @Html.TextBoxFor(c => c.Sale.Address2, new { @class = "form-control" })
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.Address2)</div>

            </div>

            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.City, new { @class = "col-md-2" })
                @Html.TextBoxFor(c => c.Sale.City, new { @class = "form-control" })
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.City)</div>

            </div>

            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.PurchaseTypeID, new { @class = "col-md-2" })
                <select class="form-control" id="salesPurchaseTypeID" name="Sale.PurchaseTypeID">
                    <option value="1">Bank Finance</option>
                    <option value="2">Cash</option>
                    <option value="3">Dealer Finance</option>
                </select>
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.PurchaseTypeID)</div>
            </div>

            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.State, new { @class = "col-md-2" })
                <select class="form-control" id="salesState" name="Sale.State">
                    <option value="AL">Alabama</option>
                    <option value="AK">Alaska</option>
                    <option value="AZ">Arizona</option>
                    <option value="AR">Arkansas</option>
                    <option value="CA">California</option>
                    <option value="CO">Colorado</option>
                    <option value="CT">Connecticut</option>
                    <option value="DE">Delaware</option>
                    <option value="DC">District Of Columbia</option>
                    <option value="FL">Florida</option>
                    <option value="GA">Georgia</option>
                    <option value="HI">Hawaii</option>
                    <option value="ID">Idaho</option>
                    <option value="IL">Illinois</option>
                    <option value="IN">Indiana</option>
                    <option value="IA">Iowa</option>
                    <option value="KS">Kansas</option>
                    <option value="KY">Kentucky</option>
                    <option value="LA">Louisiana</option>
                    <option value="ME">Maine</option>
                    <option value="MD">Maryland</option>
                    <option value="MA">Massachusetts</option>
                    <option value="MI">Michigan</option>
                    <option value="MN">Minnesota</option>
                    <option value="MS">Mississippi</option>
                    <option value="MO">Missouri</option>
                    <option value="MT">Montana</option>
                    <option value="NE">Nebraska</option>
                    <option value="NV">Nevada</option>
                    <option value="NH">New Hampshire</option>
                    <option value="NJ">New Jersey</option>
                    <option value="NM">New Mexico</option>
                    <option value="NY">New York</option>
                    <option value="NC">North Carolina</option>
                    <option value="ND">North Dakota</option>
                    <option value="OH">Ohio</option>
                    <option value="OK">Oklahoma</option>
                    <option value="OR">Oregon</option>
                    <option value="PA">Pennsylvania</option>
                    <option value="RI">Rhode Island</option>
                    <option value="SC">South Carolina</option>
                    <option value="SD">South Dakota</option>
                    <option value="TN">Tennessee</option>
                    <option value="TX">Texas</option>
                    <option value="UT">Utah</option>
                    <option value="VT">Vermont</option>
                    <option value="VA">Virginia</option>
                    <option value="WA">Washington</option>
                    <option value="WV">West Virginia</option>
                    <option value="WI">Wisconsin</option>
                    <option value="WY">Wyoming</option>
                </select>
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.State)</div>

            </div>

            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.Zipcode, new { @class = "col-md-2" })
                @Html.TextBoxFor(c => c.Sale.Zipcode, new { @class = "form-control" })
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.Zipcode)</div>

            </div>

            <hr />

            <div class="form-group col-md-12">
                @Html.LabelFor(c => c.Sale.PurchasePrice, new { @class = "col-md-3" })
                @Html.TextBoxFor(c => c.Sale.PurchasePrice, new { @class = "form-control", placeholder = "$" + Model.Details.Vehicle.SalePrice })
                <div class="text-danger col-md-12 col-md-offset-2">@Html.ValidationMessageFor(c => c.Sale.PurchasePrice)</div>

            </div>
            <button type="submit" class="col-md-offset-4 col-md-4 btn btn-primary">Submit</button>

        }
    </div>
</div>



@section scripts {
    <script src="~/JS/home.js"></script>
}
