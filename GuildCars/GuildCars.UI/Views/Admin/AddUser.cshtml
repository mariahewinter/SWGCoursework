@model GuildCars.UI.Models.UsersVM
@{
    ViewBag.Title = "AddUser";
}

<h2>Add User</h2>

<div class="container" id="adminAddUser">

    @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    @Html.LabelFor(m => m.FirstName, "First Name: ")
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="well">
                    @Html.LabelFor(m => m.LastName, "Last Name: ")
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    @Html.LabelFor(m => m.Email, "Email: ")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="well">
                    @Html.LabelFor(m => m.Role, "Role: ")
                    @Html.DropDownList("Role", (SelectList)ViewBag.Name, "")
                    @*<select class="form-control" id="addUserRole" name="Role">
                            <option value="" selected disabled>Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Sales">Sales</option>
                            <option value="Disabled">Disabled</option>
                        </select>*@
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Role)</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="well">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                </div>
            </div>

        </div>

        <input type="submit" class="btn btn-default" value="Save" />

    }
</div>

