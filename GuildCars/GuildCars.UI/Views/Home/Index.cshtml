@model GuildCars.UI.Models.FeaturedVM

@{
    ViewBag.Title = "Home Page";

}

<div class="jumbotron">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/jumboplaceholder.jpg" class="d-block w-100" alt="..." />
            </div>
            @foreach (var special in Model.Specials)
            {
                <div class="item">
                    <img src="~/Images/jumboplaceholder.jpg" class="d-block w-100" alt="..." />
                    <div class="carousel-caption">
                        <h3>@special.SpecialTitle Special!</h3>
                        <p>@special.SpecialDescription</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-xs-12">
        <h2>Featured Vehicles</h2>
        @foreach (var vehicle in Model.FeaturedVehicles)
        {
            <div class="col-xs-12 col-sm-4 col-md-3">
                <img src="~/Images/placeholder.png" />
                                 
                <p>@vehicle.Year @Model.FeaturedMakes.FirstOrDefault(m => m.MakeID == vehicle.MakeID).MakeName @Model.FeaturedModels.FirstOrDefault(m => m.ModelID == vehicle.ModelID).ModelName</p>
                <p>@vehicle.SalePrice.ToString("c")</p>
            </div>
        }
    </div>
</div>